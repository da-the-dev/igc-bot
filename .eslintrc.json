{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "jsdoc"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true,
                "avoidEscape": true 
            }
        ],
        "jsdoc/no-undefined-types": 1,
        "jsdoc/require-param-description": 0,
        "jsdoc/require-returns-description": 0,
        "jsdoc/require-returns-type": 0,
        "jsdoc/require-jsdoc": 0,
        "no-unused-vars":[
            "error",
            {
                "args": "none" 
            }
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
